{
    "latex-workshop.latex.tools": [
      {
        "name": "lualatex",
        "command": "lualatex",
        "args": [
          "--shell-escape",
          "-synctex=1",
          "-interaction=nonstopmode",
          "-file-line-error",
          "-output-directory=./build/",
          "%DOC%",
        ]
      },
      {
        "name": "biber",
        "command": "biber",
        "args": [
          "-output-directory=./build/",
          "%DOCFILE%"
        ]
      }
    ],
    "latex-workshop.latex.recipes": [
      {
        "name": "lualatex -> biber -> lualatex*2",
        "tools": [
          "lualatex",
          "biber",
          "lualatex",
          "lualatex"
        ]
      }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
  }
  